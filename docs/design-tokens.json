{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "name": "Teleprompter Plus Design Tokens",
  "version": "1.0.0",
  "lastUpdated": "2025-12-15",

  "color": {
    "brand": {
      "primary": "#4A90E2",
      "description": "Primary brand color - Teleprompter Blue"
    },
    "semantic": {
      "active": "#27AE60",
      "inactive": "#7F8C8D",
      "warning": "#E67E22",
      "danger": "#E74C3C",
      "info": "#3498DB"
    },
    "streamdeck": {
      "pure": {
        "charcoal": "#3A3A3A",
        "blue": "#4A90E2",
        "green": "#27AE60",
        "orange": "#E67E22",
        "purple": "#9B59B6",
        "pink": "#E91E63"
      },
      "icon": {
        "light": "#FFFFFF",
        "muted": "#AAAAAA",
        "subtle": "#666666"
      }
    },
    "light-mode": {
      "foreground": "#2C3E50",
      "background": "#FFFFFF",
      "muted": "#7F8C8D",
      "subtle": "#BDC3C7"
    },
    "dark-mode": {
      "foreground": "#ECF0F1",
      "background": "#1E1E1E",
      "muted": "#95A5A6",
      "subtle": "#34495E"
    }
  },

  "size": {
    "icon": {
      "sm": "16px",
      "md": "24px",
      "lg": "32px",
      "xl": "48px",
      "streamdeck-standard": "72px",
      "streamdeck-retina": "144px"
    },
    "canvas": {
      "obsidian": "24px",
      "streamdeck": "72px",
      "streamdeck-2x": "144px"
    },
    "safe-zone": {
      "obsidian": "20px",
      "streamdeck": "64px",
      "streamdeck-2x": "128px"
    },
    "icon-zone": {
      "obsidian": "16px",
      "streamdeck": "52px",
      "streamdeck-2x": "104px"
    }
  },

  "spacing": {
    "unit": "2px",
    "xs": "2px",
    "sm": "4px",
    "md": "8px",
    "lg": "16px",
    "xl": "24px",
    "padding": {
      "obsidian": "2px",
      "streamdeck": "4px",
      "streamdeck-2x": "8px"
    }
  },

  "stroke": {
    "obsidian": {
      "width": "2px",
      "widthBold": "2.5px",
      "widthThin": "1.5px"
    },
    "streamdeck": {
      "width": "6px",
      "widthBold": "7px",
      "widthThin": "4.5px"
    },
    "streamdeck-2x": {
      "width": "12px",
      "widthBold": "14px",
      "widthThin": "9px"
    },
    "linecap": "round",
    "linejoin": "round"
  },

  "corner-radius": {
    "sharp": "0px",
    "small": "2px",
    "medium": "4px",
    "large": "8px",
    "round": "50%",
    "obsidian": "2px",
    "streamdeck": "4px",
    "streamdeck-2x": "8px"
  },

  "opacity": {
    "primary": 1.0,
    "secondary": 0.8,
    "tertiary": 0.6,
    "subtle": 0.4,
    "ghost": 0.2
  },

  "typography": {
    "icon": {
      "family": "sans-serif",
      "weight": "bold",
      "sizes": {
        "large": "12px",
        "medium": "10px",
        "small": "8px"
      },
      "letterSpacing": "-0.5px"
    },
    "number": {
      "family": "monospace",
      "weight": "medium",
      "sizes": {
        "large": "14px",
        "medium": "10px",
        "small": "8px"
      }
    }
  },

  "export": {
    "formats": {
      "obsidian": "svg",
      "streamdeck": "png",
      "streamdeck-retina": "png"
    },
    "dpi": {
      "standard": 72,
      "retina": 144
    },
    "colorSpace": "sRGB",
    "transparency": true
  },

  "scaling": {
    "obsidian-to-streamdeck": 3,
    "standard-to-retina": 2
  }
}
